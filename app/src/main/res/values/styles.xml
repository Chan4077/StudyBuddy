<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- The default primary colour -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- The dark primary colour variant -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- The accent colour -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <!-- The colour of the navigation bar -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <!-- The font family of the app -->
        <item name="fontFamily">@font/baloo_2</item>
        <!-- The text input style -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
        <!-- The edit text style -->
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <!-- The bottom app bar style -->
        <item name="bottomAppBarStyle">
            @style/Widget.MaterialComponents.BottomAppBar.PrimarySurface
        </item>
        <!-- The font family of the app -->
        <item name="android:fontFamily">@font/baloo_2</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent
        </item>
        <item name="editTextPreferenceStyle">
            @style/Preference.DialogPreference.EditTextPreference.App
        </item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- The default primary colour -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- The dark primary colour variant -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- The accent colour -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <!-- The colour of the navigation bar -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <!-- The font family of the app -->
        <item name="fontFamily">@font/baloo_2</item>
        <!-- The text input style -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
        <!-- The edit text style -->
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <!-- The bottom app bar style -->
        <item name="bottomAppBarStyle">
            @style/Widget.MaterialComponents.BottomAppBar.PrimarySurface
        </item>
        <!-- The font family of the app -->
        <item name="android:fontFamily">@font/baloo_2</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent
        </item>
        <item name="editTextPreferenceStyle">
            @style/Preference.DialogPreference.EditTextPreference.App
        </item>
    </style>
    <!-- ImageButton theme that more closely matches the Material specs. -->
    <style name="Theme.App.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width" tools:ignore="PrivateResource">
            @dimen/mtrl_min_touch_target_size
        </item>
        <item name="android:layout_height" tools:ignore="PrivateResource">
            @dimen/mtrl_min_touch_target_size
        </item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>

    <!-- Styles for ImagePicker -->
    <style name="Theme.App.ImagePicker" parent="Theme.App">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mal.Toolbar.DayNight" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="Theme.Mal.DayNight" parent="Theme.App">
        <item name="mal_toolbarTheme">@style/Theme.Mal.Toolbar.DayNight</item>
        <item name="mal_toolbarPopupTheme">@style/Theme.Mal.Toolbar.DayNight</item>
        <item name="mal_color_primary">@color/mal_text_primary</item>
        <item name="mal_color_secondary">@color/mal_text_secondary</item>
        <item name="mal_card_background">@color/mal_card_background</item>
    </style>

    <style name="Theme.App.MaterialAboutFragment" parent="Theme.Mal.DayNight" />

    <!--
    TODO: Customize the ShapeAppearance
    Note that such styles should come in the next release
    -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="Preference.DialogPreference.EditTextPreference.App" parent="Preference.DialogPreference.EditTextPreference.Material">
        <item name="dialogLayout">@layout/preference_dialog_edittext_material</item>
    </style>
</resources>
